<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">
    <!--分別對應上面左圆角的半径，上面右圆角的半径，下面左圆角的半径，下面右圆角的半径-->
    <corners  
          android:topLeftRadius="24dip"
          android:topRightRadius="24dip"
          android:bottomLeftRadius="24dip"
          android:bottomRightRadius="24dip"/>
    <!-- 边框有色 内部为白色 -->
    <gradient android:startColor="#b0ff0000"
          android:endColor="#80ff0000"
          android:angle="270"/>
    <stroke   
        android:width="1dp" 
        android:color="#80ff0000" />
</shape>
