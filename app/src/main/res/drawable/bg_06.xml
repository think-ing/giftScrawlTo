<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">
    <!--分別對應上面左圆角的半径，上面右圆角的半径，下面左圆角的半径，下面右圆角的半径-->
    <corners  
          android:topLeftRadius="3dip"
          android:topRightRadius="3dip"
          android:bottomLeftRadius="3dip"
          android:bottomRightRadius="3dip"/>
    <!-- 边框有色 内部为白色 -->
    <gradient android:startColor="#33B5E5" 
          android:endColor="#33B5E5"
          android:angle="270"/>
    <stroke
        android:width="0.5dp" 
        android:color="#33B5E5" /> 
</shape>
